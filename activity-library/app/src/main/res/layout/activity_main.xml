<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editMsg" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="86dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="99dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="99dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="250dp"
            android:layout_height="128dp"
            android:id="@+id/txtOutput" android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintHorizontal_bias="0.493" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/editMsg"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSend" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="144dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="144dp"
            app:layout_constraintHorizontal_bias="0.49" android:onClick="onSend"
            android:layout_marginTop="92dp" app:layout_constraintTop_toBottomOf="@+id/txtOutput"/>
</android.support.constraint.ConstraintLayout>